<mvc:View controllerName="AbarroCurso.facturas.controller.Principal"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:item="sap.ui.core.Item">
    <Page id="page" title="{i18n>title}">
        <content />

        <Panel id="_IDGenPanel1" headerText="{i18n>SelectionScreen}">
            <Label id="labelShipName" labelFor="shipName" text="Ship Name" class="sapUiSmallMargin"/>
            <Input id="shipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"/>
            <Label id="labelCountry" text="Country" class="sapUiSmallMargin"/>
            <Select id="slCountry" selectedKey="{selectionScreen>/CountryKey}"
                                   forceSelection="false"
                                   items="{selectionScreen>/Countries}">
                    <items>
                        <core:Item id="_IDGenItem1" key="{selectionScreen>key}" text="{selectionScreen>text}"/>
                    </items>
            </Select>
            <Button id="btnFilters" 
                    text="{i18n>btnfilter}" 
                    icon="sap-icon://add-filter" 
                    press="onFilter"
                    class="sapUiSmallMarginEnd"/>

            <Button id="btnClearFilters" 
                    text="{i18n>btnClearFilters}" 
                    icon="sap-icon://clear-filter" 
                    press="onClearFilter"
                    class="sapUiSmallMarginEnd"/>
        </Panel>
    </Page>
</mvc:View>
